<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightdarkcolorgrey"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/attachementallImg"
            android:layout_width="@dimen/activity_margin_400dp"
            android:layout_height="@dimen/activity_margin_350dp"
            android:layout_marginTop="@dimen/activity_margin_0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/activity_margin_5dp">

        <TextView
            android:id="@+id/commentstxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/activity_margin_18dp"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_margin_2dp"
        android:layout_marginTop="@dimen/activity_margin_10dp"
        android:layout_marginBottom="@dimen/activity_margin_10dp"
        android:background="#c0c0c0" />

</LinearLayout>
