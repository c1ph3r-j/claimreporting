                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/deletebuttonid"
                                    android:layout_width="@dimen/activity_margin_25dp"
                                    android:layout_height="@dimen/activity_margin_25dp"
                                    android:layout_marginLeft="@dimen/activity_margin_0dp"
                                    android:layout_marginRight="@dimen/activity_margin_30dp"
                                    app:srcCompat="@drawable/icon_delete_white"
                                    tools:visibility="visible" />

                            </RelativeLayout>

                        </TableRow>

                        <LinearLayout
                            android:id="@+id/phnodriver"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_margin_10dp"
                            android:layout_marginTop="@dimen/activity_margin_10dp"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textview17"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
