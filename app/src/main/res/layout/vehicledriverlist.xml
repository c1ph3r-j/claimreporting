                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textview38"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/latinotypeantartidaroundedmedium"
                                    android:padding="@dimen/activity_margin_5dp"
                                    android:text="@string/d_l_validity_to"
                                    android:textSize="@dimen/activity_margin_14dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/colondrivervalidtyto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/latinotypeantartidaroundedmedium"
                                    android:padding="@dimen/activity_margin_5dp"
                                    android:text="@string/collen"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/activity_margin_14dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtdrivervalidityto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/latinotypeantartidaroundedmedium"
                                    android:padding="@dimen/activity_margin_5dp"
                                    android:text="@string/kcy587e"
                                    android:textSize="@dimen/activity_margin_14dp"
                                    android:textStyle="bold" />


                            </LinearLayout>
                        </LinearLayout>


                    </TableLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
