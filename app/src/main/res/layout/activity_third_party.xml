    <LinearLayout
        android:id="@+id/addThirdPartyBtnView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_margin_20dp"
        android:layout_marginTop="@dimen/activity_margin_20dp"
        android:layout_marginEnd="@dimen/activity_margin_20dp"
        android:layout_marginBottom="@dimen/activity_margin_10dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_margin_10dp"
            android:layout_weight="3"
            android:textColor="@color/black"
            android:textSize="@dimen/activity_margin_18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/addThirdPartyBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_third_party"
            android:textSize="@dimen/activity_margin_14dp"
            android:textStyle="bold" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10">

        <ListView
            android:id="@+id/listOfThirdParties"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/noThirdPartyLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/noThirdParties"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/activity_margin_15dp"
                android:layout_marginEnd="@dimen/activity_margin_15dp"
                android:layout_marginBottom="@dimen/activity_margin_6dp"
                android:fontFamily="@font/latinotypeantartidaroundedbold"
                android:gravity="center"
                android:text="No Third Party has been added."
                android:textColor="@color/lightgrey"
                android:textSize="@dimen/activity_margin_20dp" />

            <Button
                android:id="@+id/addThirdPartyBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_third_party"
                android:textSize="@dimen/activity_margin_14dp"
                android:textStyle="bold" />

        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/nextid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_margin_50dp"
            android:background="@color/purple_500"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_margin_5dp"
                android:fontFamily="@font/latinotypeantartidaroundedmedium"
                android:text="@string/nexttxt"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_margin_20dp"
                android:textStyle="bold">

            </TextView>

            <ImageView
                android:layout_width="@dimen/activity_margin_30dp"
                android:layout_height="@dimen/activity_margin_30dp"
                android:src="@drawable/ic_round_double_arrow_24">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/SkipButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_margin_50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/activity_margin_5dp"
                android:fontFamily="@font/latinotypeantartidaroundedmedium"
                android:text="@string/skip_text"
                android:textColor="@color/bluehyperlink"
                android:textSize="@dimen/activity_margin_20dp"
                android:textStyle="bold">

            </TextView>

            <ImageView
                android:layout_width="@dimen/activity_margin_30dp"
                android:layout_height="@dimen/activity_margin_30dp"
                android:paddingEnd="@dimen/activity_margin_10dp"
                android:src="@drawable/ic_round_double_arrow_24"
                app:tint="@color/bluehyperlink">

            </ImageView>

        </LinearLayout>

