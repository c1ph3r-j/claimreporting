<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_bordergrey">>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_margin_10dp"
        android:layout_marginTop="@dimen/activity_margin_10dp"
        android:layout_marginRight="@dimen/activity_margin_5dp"
        android:layout_marginBottom="@dimen/activity_margin_10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/viewlinanimate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_margin_200dp"
            app:cardCornerRadius="@dimen/activity_margin_4dp"
            app:cardElevation="@dimen/activity_margin_5dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="@dimen/activity_margin_16dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:animateLayoutChanges="true"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:gravity="end">

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="start">

                    </RadioButton>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="100">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/headertxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/activity_margin_6dp"
                                android:fontFamily="@font/latinotypeantartidaroundedlight"
                                android:text="Driver Name"
                                android:textColor="@color/darkgrey"
                                android:textSize="@dimen/activity_margin_19dp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/tittletxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/activity_margin_4dp"
                                android:fontFamily="@font/latinotypeantartidaroundedmedium"
                                android:text="Arun Shiva"
                                android:textColor="@color/blackdark"
                                android:textSize="@dimen/activity_margin_16dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/header1txt"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/activity_margin_6dp"
                                android:fontFamily="@font/latinotypeantartidaroundedlight"
                                android:text="DL Number"
                                android:textColor="@color/darkgrey"
                                android:textSize="@dimen/activity_margin_19dp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/tittle1txt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="end"
                                android:layout_marginBottom="@dimen/activity_margin_4dp"
                                android:fontFamily="@font/latinotypeantartidaroundedmedium"
                                android:gravity="end"
                                android:text="DL998898"
                                android:textColor="@color/blackdark"
                                android:textSize="@dimen/activity_margin_16dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_margin_30dp"
                        android:gravity="center|center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="100">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/header3txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/activity_margin_6dp"
                                android:fontFamily="@font/latinotypeantartidaroundedlight"
                                android:text="DL Start Date"
                                android:textColor="@color/darkgrey"
                                android:textSize="@dimen/activity_margin_19dp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/tittle3txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/activity_margin_4dp"
                                android:fontFamily="@font/latinotypeantartidaroundedmedium"
                                android:text="29-Sep-2020"
                                android:textColor="@color/blackdark"
                                android:textSize="@dimen/activity_margin_16dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/header4txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/activity_margin_6dp"
                                android:fontFamily="@font/latinotypeantartidaroundedlight"
                                android:text="DL Expiry Dat"
                                android:textColor="@color/darkgrey"
                                android:textSize="@dimen/activity_margin_19dp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/tittle4txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/activity_margin_4dp"
                                android:fontFamily="@font/latinotypeantartidaroundedmedium"
                                android:text="29-Dec-2026"
                                android:textColor="@color/blackdark"
                                android:textSize="@dimen/activity_margin_16dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>
