<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--            <ScrollView-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:scrollbarStyle="outsideInset"-->
            <!--                app:layout_constraintStart_toStartOf="parent"-->
            <!--                app:layout_constraintTop_toTopOf="parent">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:scrollbarStyle="outsideInset"
                android:scrollbars="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_margin_10dp"
                    app:cardCornerRadius="@dimen/activity_margin_10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TableLayout
                            android:id="@+id/step8Tab"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bordergray"
                            android:scrollbars="horizontal|vertical"
                            android:visibility="visible">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/appTheme"
                                android:gravity="center"
                                android:weightSum="1">

                                <TextView
                                    android:id="@+id/txtnamenear"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/activity_margin_10dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/latinotypeantartidaroundedbold"
                                    android:text="@string/name"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/activity_margin_14sp" />

                                <ImageView
                                    android:id="@+id/deletenearbuttonid"
                                    android:layout_width="@dimen/activity_margin_30dp"
                                    android:layout_height="@dimen/activity_margin_30dp"
                                    android:layout_marginEnd="@dimen/activity_margin_10dp"
                                    app:srcCompat="@drawable/closeicon" />

                            </TableRow>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/activity_margin_10dp"
                                android:layout_marginTop="@dimen/activity_margin_10dp"
                                android:layout_marginEnd="@dimen/activity_margin_10dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txtneardear"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/latinotypeantartidaroundedbold"
                                        android:padding="@dimen/activity_margin_5dp"
                                        android:text="@string/phone_number"
                                        android:textSize="@dimen/activity_margin_14sp" />

                                    <TextView
                                        android:id="@+id/colonneardear"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="1.5"
                                        android:padding="@dimen/activity_margin_5dp"
                                        android:text="@string/collen"
                                        android:textAlignment="center"
                                        android:textSize="@dimen/activity_margin_14sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txtnearval"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/latinotypeantartidaroundedbold"
                                        android:padding="@dimen/activity_margin_5dp"
                                        android:text="@string/_254"
                                        android:textSize="@dimen/activity_margin_14sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/activity_margin_10dp"
                                android:layout_marginTop="@dimen/activity_margin_10dp"
                                android:layout_marginEnd="@dimen/activity_margin_10dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txtnearemail"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/latinotypeantartidaroundedbold"
                                        android:padding="@dimen/activity_margin_5dp"
                                        android:text="@string/email_id"
                                        android:textSize="@dimen/activity_margin_14sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/colonnearemail"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1.5"
                                        android:text="@string/collen"
                                        android:textAlignment="center"
                                        android:textSize="@dimen/activity_margin_14sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txtnearemailval"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="@dimen/activity_margin_10dp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/latinotypeantartidaroundedbold"
                                        android:padding="@dimen/activity_margin_5dp"
                                        android:textAlignment="textStart"
                                        android:textSize="@dimen/activity_margin_14sp"
                                        android:textStyle="bold" />


                                </LinearLayout>
                            </LinearLayout>


                        </TableLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <!--            </ScrollView>-->
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
