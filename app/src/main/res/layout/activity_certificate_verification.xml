<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightdarkcolorgrey"
    android:orientation="vertical"
    tools:context=".CertificateVerification">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_margin_15dp"
        android:layout_marginTop="@dimen/activity_margin_15dp"
        android:layout_marginEnd="@dimen/activity_margin_15dp"
        android:fontFamily="@font/latinotypeantartidaroundedmedium"
        android:text="Choose one of the option below:"
        android:textColor="@color/black"
        android:textSize="@dimen/activity_margin_20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/activity_margin_15dp"
        android:layout_marginBottom="@dimen/activity_margin_10dp"
        android:paddingHorizontal="@dimen/activity_margin_15dp"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/activity_margin_8dp"
            android:layout_marginVertical="@dimen/activity_margin_5dp"
            app:cardCornerRadius="@dimen/activity_margin_10dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:id="@+id/lifeInsure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/activity_margin_10dp">

                <ImageView
                    android:layout_width="@dimen/activity_margin_80dp"
                    android:layout_height="@dimen/activity_margin_80dp"
                    android:src="@drawable/verification_ic"
                    android:contentDescription="Life Insurance Icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/latinotypeantartidaroundedbold"
                    android:gravity="center"
                    android:paddingTop="@dimen/activity_margin_10dp"
                    android:text="Verify Certificate - \nLife Insurance"
                    android:textSize="@dimen/activity_margin_14dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/activity_margin_8dp"
            android:layout_marginVertical="@dimen/activity_margin_5dp"
            app:cardCornerRadius="@dimen/activity_margin_10dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:id="@+id/motorInsure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/activity_margin_10dp">

                <ImageView
                    android:layout_width="@dimen/activity_margin_80dp"
                    android:layout_height="@dimen/activity_margin_80dp"
                    android:src="@drawable/verification_ic"
                    android:contentDescription="Motor Insurance Icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/latinotypeantartidaroundedbold"
                    android:gravity="center"
                    android:paddingTop="@dimen/activity_margin_10dp"
                    android:text="Verify Certificate - \nMotor Insurance"
                    android:textSize="@dimen/activity_margin_14dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/activity_margin_10dp"
        android:layout_marginBottom="@dimen/activity_margin_10dp"
        android:paddingHorizontal="@dimen/activity_margin_15dp"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/activity_margin_8dp"
            android:layout_marginVertical="@dimen/activity_margin_5dp"
            app:cardCornerRadius="@dimen/activity_margin_10dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:id="@+id/marineInsure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/activity_margin_10dp">

                <ImageView
                    android:layout_width="@dimen/activity_margin_80dp"
                    android:layout_height="@dimen/activity_margin_80dp"
                    android:src="@drawable/verification_ic"
                    android:contentDescription="Marine Insurance Icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/latinotypeantartidaroundedbold"
                    android:gravity="center"
                    android:paddingTop="@dimen/activity_margin_8dp"
                    android:text="Verify Certificate - \nMarine Insurance"
                    android:textSize="@dimen/activity_margin_14dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/activity_margin_8dp"
            android:layout_marginVertical="@dimen/activity_margin_5dp"
            app:cardCornerRadius="@dimen/activity_margin_10dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:id="@+id/piInsure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/activity_margin_10dp">

                <ImageView
                    android:layout_width="@dimen/activity_margin_80dp"
                    android:layout_height="@dimen/activity_margin_80dp"
                    android:src="@drawable/verification_ic"
                    android:contentDescription="PI Insurance Icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/latinotypeantartidaroundedbold"
                    android:gravity="center"
                    android:paddingTop="@dimen/activity_margin_8dp"
                    android:text="Verify Certificate - \nPI Insurance"
                    android:textSize="@dimen/activity_margin_14dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>



</LinearLayout>
