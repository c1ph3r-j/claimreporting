<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightdarkcolorgrey"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin_10dp"
        app:cardCornerRadius="@dimen/activity_margin_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/createdByIncidentId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/activity_margin_10dp"
                    android:layout_marginTop="@dimen/activity_margin_5dp"
                    android:layout_marginRight="@dimen/activity_margin_10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/latinotypeantartidaroundedmedium"
                    android:gravity="center"
                    android:text="@string/incident_id"
                    android:textColor="@color/black"
                    android:textSize="@dimen/activity_margin_15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_margin_5dp"
                    android:background="@drawable/dottedline2" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_margin_10dp"
                android:layout_marginTop="@dimen/activity_margin_15dp"
                android:layout_marginRight="@dimen/activity_margin_5dp"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/activity_margin_1dp"
                    android:gravity="start">


                    <TextView
                        android:id="@+id/createdByName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/latinotypeantartidaroundedmedium"
                        android:paddingStart="@dimen/activity_margin_10dp"
                        android:text="@string/name"

                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_margin_15dp" />


                    <TextView
                        android:id="@+id/colonpolicyno"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/latinotypeantartidaroundedmedium"

                        android:text="@string/collen"

                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_margin_15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin_5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/createdByNameVal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/latinotypeantartidaroundedmedium"

                            android:textColor="#131313"
                            android:textStyle="normal" />

                    </LinearLayout>

                </TableRow>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_margin_10dp"
                android:layout_marginTop="@dimen/activity_margin_15dp"
                android:layout_marginRight="@dimen/activity_margin_5dp"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/activity_margin_1dp"
                    android:gravity="start">


                    <TextView
                        android:id="@+id/createdByMobileNo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/latinotypeantartidaroundedmedium"
                        android:paddingStart="@dimen/activity_margin_10dp"
                        android:text="@string/mobile_number_"

                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_margin_15dp" />


                    <TextView
                        android:id="@+id/colonpolicycover"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/latinotypeantartidaroundedmedium"

                        android:text="@string/collen"

                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_margin_15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin_5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/createdByMobileNoVal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/latinotypeantartidaroundedmedium"
                            android:textColor="#131313"
                            android:textStyle="normal" />

                    </LinearLayout>


                </TableRow>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_margin_10dp"
                android:layout_marginTop="@dimen/activity_margin_15dp"
                android:layout_marginRight="@dimen/activity_margin_5dp"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/activity_margin_1dp"
                    android:gravity="start">


                    <TextView
                        android:id="@+id/createdByVehicleNo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/latinotypeantartidaroundedmedium"
                        android:paddingStart="@dimen/activity_margin_10dp"
                        android:text="@string/vehicle_number"

                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_margin_15dp" />


                    <TextView
                        android:id="@+id/colonclaimtype"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/latinotypeantartidaroundedmedium"

                        android:text="@string/collen"

                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_margin_15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin_5dp"
                        android:layout_marginBottom="@dimen/activity_margin_10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/createdByVehicleNoVal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/latinotypeantartidaroundedmedium"
                            android:textColor="#131313"
                            android:textStyle="normal" />
                    </LinearLayout>


                </TableRow>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
