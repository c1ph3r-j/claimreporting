<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin_20dp"
        app:cardCornerRadius="@dimen/activity_margin_15dp"
        app:cardElevation="@dimen/activity_margin_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightdarkcolorgrey"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_margin_5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/purple_500"
                android:gravity="center"
                android:padding="@dimen/activity_margin_15dp"
                android:text="Add Third Party"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_margin_18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/activity_margin_10dp"
                android:paddingTop="@dimen/activity_margin_10dp"
                android:paddingEnd="@dimen/activity_margin_10dp"
                android:text="You should enter any one of the below value to add the Third Party."
                android:textAlignment="center"
                android:textColor="@color/bluehyperlink"
                android:textSize="@dimen/activity_margin_16dp" />

            <TextView
                android:id="@+id/registrationNoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_margin_10dp"
                android:text="Registration Number:"
                android:textColor="@color/black"
                android:textSize="@dimen/activity_margin_16dp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/registrationNoField"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_margin_50dp"
                android:layout_marginStart="@dimen/activity_margin_15dp"
                android:layout_marginEnd="@dimen/activity_margin_15dp"
                android:background="@drawable/edit_text"
                android:hint="Registration Number"
                android:padding="@dimen/activity_margin_10dp"
                android:textSize="@dimen/activity_margin_15dp"
                android:visibility="visible" />


            <TextView
                android:id="@+id/makeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_margin_10dp"
                android:text="Make:"
                android:textColor="@color/black"
                android:textSize="@dimen/activity_margin_16dp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/makeField"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_margin_50dp"
                android:layout_marginStart="@dimen/activity_margin_15dp"
                android:layout_marginEnd="@dimen/activity_margin_15dp"
                android:layout_marginBottom="@dimen/activity_margin_10dp"
                android:background="@drawable/edit_text"
                android:hint="Make"
                android:padding="@dimen/activity_margin_10dp"
                android:textSize="@dimen/activity_margin_15dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/modelTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_margin_10dp"
                android:text="Model:"
                android:textColor="@color/black"
                android:textSize="@dimen/activity_margin_16dp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/modelField"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_margin_50dp"
                android:layout_marginStart="@dimen/activity_margin_15dp"
                android:layout_marginEnd="@dimen/activity_margin_15dp"
                android:layout_marginBottom="@dimen/activity_margin_10dp"
                android:background="@drawable/edit_text"
                android:hint="Model"
                android:padding="@dimen/activity_margin_10dp"
                android:textSize="@dimen/activity_margin_15dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/ColorTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_margin_10dp"
                android:text="Color:"
                android:textColor="@color/black"
                android:textSize="@dimen/activity_margin_16dp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/colorField"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_margin_50dp"
                android:layout_marginStart="@dimen/activity_margin_15dp"
                android:layout_marginEnd="@dimen/activity_margin_15dp"
                android:layout_marginBottom="@dimen/activity_margin_10dp"
                android:background="@drawable/edit_text"
                android:hint="Color"
                android:padding="@dimen/activity_margin_10dp"
                android:textSize="@dimen/activity_margin_15dp"
                android:visibility="visible" />

            <Button
                android:id="@+id/addThirdPartyToTheListBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_margin_60dp"
                android:layout_margin="@dimen/activity_margin_15dp"
                android:text="@string/add" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>