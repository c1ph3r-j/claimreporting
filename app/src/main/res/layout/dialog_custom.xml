<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin_20dp"
    android:background="@android:color/white"
    android:layout_gravity="center"
    android:elevation="@dimen/activity_margin_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/latinotypeantartidaroundedbold"
            android:padding="@dimen/activity_margin_10dp"
            android:text="Alert"
            android:textColor="@color/black"
            android:textSize="@dimen/activity_margin_18dp" />

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_margin_1dp"
        android:background="@color/appColor"
        android:layout_marginBottom="@dimen/activity_margin_10dp"/>
    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Before submitting your claim, we need confirmation. By signing in, you'll receive more updates on the status of your claims. Would you like to sign in now or later?"
        android:textSize="@dimen/activity_margin_18dp"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:textAlignment="textStart"
        android:paddingBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="@dimen/activity_margin_30dp"
        android:layout_marginHorizontal="@dimen/activity_margin_30dp">
        <Button
            android:id="@+id/Sign_in_now_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In Now"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_marginEnd="@dimen/activity_margin_10dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/Sign_in_later_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Later"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_marginStart="@dimen/activity_margin_10dp"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>
