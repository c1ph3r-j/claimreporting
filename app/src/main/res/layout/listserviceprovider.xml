<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_margin_15dp"
            app:cardCornerRadius="@dimen/activity_margin_8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:id="@+id/step8Tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal|vertical"
                    android:stretchColumns="0"
                    android:visibility="visible">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/purple_500"
                        android:padding="@dimen/activity_margin_5dp"

                        android:weightSum="2">

                        <TextView
                            android:id="@+id/txthospitalname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/latinotypeantartidaroundedmedium"
                            android:padding="@dimen/activity_margin_5dp"
                            android:text="@string/the_nairobi_west_hospital_ltd"
                            android:textColor="@color/white"
                            android:textSize="@dimen/activity_margin_14dp"
                            android:textStyle="bold" />


                    </TableRow>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_margin_10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView14"
                            android:layout_width="@dimen/activity_margin_25dp"
                            android:layout_height="@dimen/activity_margin_25dp"
                            android:layout_marginLeft="@dimen/activity_margin_18dp"
                            app:srcCompat="@drawable/phone_squared" />

                        <TextView
                            android:id="@+id/txtphnoval"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_margin_14dp"
                            android:layout_marginTop="@dimen/activity_margin_5dp"
                            android:fontFamily="@font/latinotypeantartidaroundedmedium"
                            android:text="@string/_254_709_640000"
                            android:textColor="@android:color/holo_blue_light"
                            android:textSize="@dimen/activity_margin_14dp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin_10dp"
                        android:layout_marginTop="@dimen/activity_margin_10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView16"
                            android:layout_width="@dimen/activity_margin_25dp"
                            android:layout_height="@dimen/activity_margin_25dp"
                            android:layout_marginLeft="@dimen/activity_margin_10dp"
                            android:layout_marginTop="@dimen/activity_margin_10dp"
                            app:srcCompat="@drawable/map_2" />

                        <TextView
                            android:id="@+id/txtaddressval"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_margin_16dp"
                            android:layout_marginTop="@dimen/activity_margin_10dp"
                            android:fontFamily="@font/latinotypeantartidaroundedmedium"
                            android:gravity="center_vertical"
                            android:text="@string/mimosa_road_mucai_drive_off_ngong_road_next_to_pram_court_apartments_aki_centre_nairobi_city_kenya"
                            android:textColor="@android:color/holo_blue_light"
                            android:textSize="@dimen/activity_margin_14dp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </TextView>
                    </LinearLayout>

                </TableLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>
