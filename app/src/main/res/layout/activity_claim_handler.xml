<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClaimHandler"
    android:gravity="center"

    android:background="@color/lightdarkcolorgrey"
    android:orientation="vertical">

    
    
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center">



        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/activity_margin_100dp"
            android:layout_height="@dimen/activity_margin_100dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_close" />


        <TextView
            android:id="@+id/errorMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            tools:text="The claim have been already submitted"
            android:fontFamily="@font/latinotypeantartidaroundedbold"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/activity_margin_15dp"
            android:layout_marginHorizontal="@dimen/activity_margin_15dp"
            android:textSize="@dimen/activity_margin_20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:id="@+id/backToDashBoardBtn">


        <TextView
            android:id="@+id/Btnuclaimbacktohome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_500"
            android:fontFamily="@font/latinotypeantartidaroundedbold"
            android:gravity="center"
            android:text="@string/Back_to_home"
            android:textColor="@color/bluehyperlink"
            android:textSize="@dimen/activity_margin_18dp" />

        <ImageView
            android:layout_width="@dimen/activity_margin_30dp"
            android:layout_height="@dimen/activity_margin_30dp"
            android:src="@drawable/ic_round_double_arrow_24"
            app:tint="@color/bluehyperlink" />


    </LinearLayout>
</LinearLayout>