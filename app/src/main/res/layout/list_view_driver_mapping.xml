<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin_10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin_10dp"
                android:orientation="vertical">

                <!--            <ScrollView-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="match_parent"-->
                <!--                android:scrollbarStyle="outsideInset"-->
                <!--                app:layout_constraintStart_toStartOf="parent"-->
                <!--                app:layout_constraintTop_toTopOf="parent">-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_margin_10dp"
                        android:backgroundTint="@color/white"
                        android:orientation="vertical"
                        app:cardCornerRadius="@dimen/activity_margin_10dp">

                        <TableLayout
                            android:id="@+id/step8Tab"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bordergray"
                            android:stretchColumns="0"
                            android:visibility="visible">


                            <TableRow
                                android:id="@+id/tablerowid"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/purple_500"

                                android:padding="@dimen/activity_margin_5dp"
                                android:weightSum="2">

                                <TextView
                                    android:id="@+id/txtdriverName"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/latinotypeantartidaroundedmedium"
                                    android:padding="@dimen/activity_margin_5dp"
                                    android:text="@string/type_b_commercial_vehicle"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/activity_margin_14dp"
                                    android:textStyle="bold" />

                                <!--                            <ImageView-->
                                <!--                                android:id="@+id/sharebuttonid"-->
                                <!--                                android:layout_width="@dimen/activity_margin_30dp"-->
                                <!--                                android:layout_height="@dimen/activity_margin_30dp"-->
                                <!--                                android:layout_marginLeft="@dimen/activity_margin_60dp"-->
                                <!--                                app:srcCompat="@drawable/share_icon" />-->

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <CheckBox
                                        android:id="@+id/checkBoxdriver"
                                        android:layout_width="@dimen/activity_margin_30dp"
                                        android:layout_height="@dimen/activity_margin_30dp"
                                        android:layout_marginRight="@dimen/activity_margin_10dp"
                                        android:buttonTint="@color/white"
                                        android:visibility="gone" />

                                    <ImageView
                                        android:id="@+id/Notactivatedriver"
                                        android:layout_width="@dimen/activity_margin_30dp"
                                        android:layout_height="@dimen/activity_margin_30dp"
                                        android:layout_marginRight="@dimen/activity_margin_10dp"
                                        android:src="@drawable/activateicon"
                                        android:visibility="gone" />
                                </RelativeLayout>


                                <!--                                <CheckBox-->
                                <!--                                    android:id="@+id/checkBoxdriver"-->
                                <!--                                    android:layout_width="@dimen/activity_margin_30dp"-->
                                <!--                                    android:buttonTint="@color/white"-->
                                <!--                                    android:layout_marginRight="@dimen/activity_margin_10dp"-->
                                <!--                                    android:layout_height="@dimen/activity_margin_30dp"/>-->

                            </TableRow>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_margin_10dp"
                                android:layout_marginTop="@dimen/activity_margin_10dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/textview17"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:padding="@dimen/activity_margin_5dp"
                                        android:text="@string/driver_dl_num"
                                        android:textSize="@dimen/activity_margin_14dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/colonregno"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:padding="@dimen/activity_margin_5dp"
                                        android:text=":"
                                        android:textAlignment="center"
                                        android:textSize="@dimen/activity_margin_14dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txtdriverDLNum"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:padding="@dimen/activity_margin_5dp"
                                        android:text=""
                                        android:textSize="@dimen/activity_margin_14dp"
                                        android:textStyle="bold" />


                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_margin_10dp"
                                android:layout_marginTop="@dimen/activity_margin_10dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/textview26"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:padding="@dimen/activity_margin_5dp"
                                        android:text="@string/d_l_validity_from"
                                        android:textSize="@dimen/activity_margin_14dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/coloncertno"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:padding="@dimen/activity_margin_5dp"
                                        android:text=":"
                                        android:textAlignment="center"
                                        android:textSize="@dimen/activity_margin_14dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txtdlvalidfrom"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:padding="@dimen/activity_margin_5dp"
                                        android:text=""
                                        android:textSize="@dimen/activity_margin_14dp"
                                        android:textStyle="bold" />


                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_margin_10dp"
                                android:layout_marginTop="@dimen/activity_margin_10dp"
                                android:layout_marginBottom="@dimen/activity_margin_10dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/textview37"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:padding="@dimen/activity_margin_5dp"
                                        android:text="@string/d_l_validity_to"
                                        android:textSize="@dimen/activity_margin_14dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/coloncmpnyname"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:padding="@dimen/activity_margin_5dp"
                                        android:text=":"
                                        android:textAlignment="center"
                                        android:textSize="@dimen/activity_margin_14dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txdlvalidto"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:padding="@dimen/activity_margin_5dp"
                                        android:text=""
                                        android:textSize="@dimen/activity_margin_14dp"
                                        android:textStyle="bold" />


                                </LinearLayout>
                            </LinearLayout>

                        </TableLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <!--            </ScrollView>-->
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
