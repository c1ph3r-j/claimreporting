<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_margin_10dp"
        android:layout_marginTop="@dimen/activity_margin_10dp"
        android:layout_marginRight="@dimen/activity_margin_10dp"
        android:layout_marginBottom="@dimen/activity_margin_10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/viewlinanimate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_margin_140dp"
            app:cardCornerRadius="@dimen/activity_margin_10dp"
            app:cardElevation="@dimen/activity_margin_6dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="@dimen/activity_margin_10dp">

            <LinearLayout

                android:id="@+id/layoutForNotification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="100">


                    <ImageView
                        android:id="@+id/imgviewcert"
                        android:layout_width="@dimen/activity_margin_80dp"
                        android:layout_height="@dimen/activity_margin_80dp"
                        android:layout_marginRight="@dimen/activity_margin_15dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/dashboardicon2" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/headertxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/activity_margin_4dp"
                            android:fontFamily="@font/latinotypeantartidaroundedlight"
                            android:textColor="@color/blackdark"
                            android:textSize="@dimen/activity_margin_16dp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/tittletxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/latinotypeantartidaroundedmedium"
                            android:textColor="@color/blackdark"
                            android:textSize="@dimen/activity_margin_14dp" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

</RelativeLayout>
