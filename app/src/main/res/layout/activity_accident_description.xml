<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightdarkcolorgrey"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".AccidentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/activity_margin_10dp"
        android:layout_weight="10"
        android:orientation="vertical"
        android:padding="@dimen/activity_margin_10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_margin_10dp"
            android:background="@drawable/dotted_box">


            <ImageView
                android:id="@+id/videoevidencecloseicon"
                android:layout_width="@dimen/activity_margin_40dp"
                android:layout_height="@dimen/activity_margin_40dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/closeicon"
                android:visibility="gone" />

            <TextView
                android:id="@+id/videoevidencebtntxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/latinotypeantartidaroundedbold"
                android:gravity="center"
                android:text="Click here to record the driver's statement about the incident"
                android:textAlignment="center"
                android:textColor="@color/bluehyperlink"
                android:textSize="@dimen/activity_margin_20dp">

            </TextView>

            <VideoView
                android:id="@+id/videoViewevidence"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/activity_margin_50dp"
                android:visibility="gone" />


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/nextid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_margin_50dp"
            android:background="@color/purple_500"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_margin_5dp"
                android:fontFamily="@font/latinotypeantartidaroundedmedium"
                android:text="@string/nexttxt"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_margin_20dp"
                android:textStyle="bold">

            </TextView>

            <ImageView
                android:layout_width="@dimen/activity_margin_30dp"
                android:layout_height="@dimen/activity_margin_30dp"
                android:src="@drawable/ic_round_double_arrow_24">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/SkipButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_margin_50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/activity_margin_5dp"
                android:fontFamily="@font/latinotypeantartidaroundedmedium"
                android:text="@string/skip_text"
                android:textColor="@color/bluehyperlink"
                android:textSize="@dimen/activity_margin_20dp"
                android:textStyle="bold">

            </TextView>

            <ImageView
                android:layout_width="@dimen/activity_margin_30dp"
                android:layout_height="@dimen/activity_margin_30dp"
                android:paddingEnd="@dimen/activity_margin_10dp"
                android:src="@drawable/ic_round_double_arrow_24"
                app:tint="@color/bluehyperlink">

            </ImageView>

        </LinearLayout>

