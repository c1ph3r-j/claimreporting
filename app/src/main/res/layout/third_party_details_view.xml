<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_margin_15dp"
        android:layout_marginTop="@dimen/activity_margin_10dp"
        android:layout_marginEnd="@dimen/activity_margin_15dp"
        android:layout_marginBottom="@dimen/activity_margin_10dp"
        app:cardCornerRadius="@dimen/activity_margin_10dp"
        app:cardElevation="@dimen/activity_margin_4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/purple_500"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/thirdPartyCount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/activity_margin_10dp"
                    android:layout_marginTop="@dimen/activity_margin_5dp"
                    android:layout_marginRight="@dimen/activity_margin_10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/latinotypeantartidaroundedbold"
                    android:gravity="center"
                    android:text="ThirdParty Count"
                    android:textColor="@color/white"
                    android:textSize="@dimen/activity_margin_17dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_margin_10dp"
                android:layout_marginTop="@dimen/activity_margin_15dp"
                android:layout_marginRight="@dimen/activity_margin_5dp"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/activity_margin_1dp"
                    android:gravity="start">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/latinotypeantartidaroundedmedium"
                        android:paddingStart="@dimen/activity_margin_10dp"
                        android:text="Registration Number"
                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_margin_15dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/latinotypeantartidaroundedmedium"

                        android:text="@string/collen"

                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_margin_15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin_5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/regNoVal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/latinotypeantartidaroundedmedium"

                            android:textColor="#131313"
                            android:textStyle="normal" />

                    </LinearLayout>

                </TableRow>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_margin_10dp"
                android:layout_marginTop="@dimen/activity_margin_15dp"
                android:layout_marginRight="@dimen/activity_margin_5dp"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/activity_margin_1dp"
                    android:gravity="start">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/latinotypeantartidaroundedmedium"
                        android:paddingStart="@dimen/activity_margin_10dp"
                        android:text="Make"

                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_margin_15dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/latinotypeantartidaroundedmedium"
                        android:text="@string/collen"
                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_margin_15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin_5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/makeVal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/latinotypeantartidaroundedmedium"

                            android:textColor="#131313"
                            android:textStyle="normal" />

                    </LinearLayout>

                </TableRow>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_margin_10dp"
                android:layout_marginTop="@dimen/activity_margin_15dp"
                android:layout_marginRight="@dimen/activity_margin_5dp"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/activity_margin_1dp"
                    android:gravity="start">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/latinotypeantartidaroundedmedium"
                        android:paddingStart="@dimen/activity_margin_10dp"
                        android:text="Model"

                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_margin_15dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/latinotypeantartidaroundedmedium"

                        android:text="@string/collen"

                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_margin_15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin_5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/modelVal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/latinotypeantartidaroundedmedium"
                            android:textColor="#131313"
                            android:textStyle="normal" />

                    </LinearLayout>


                </TableRow>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_margin_10dp"
                android:layout_marginTop="@dimen/activity_margin_15dp"
                android:layout_marginRight="@dimen/activity_margin_5dp"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/activity_margin_1dp"
                    android:gravity="start">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/latinotypeantartidaroundedmedium"
                        android:paddingStart="@dimen/activity_margin_10dp"
                        android:text="Color"
                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_margin_15dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/latinotypeantartidaroundedmedium"
                        android:text="@string/collen"
                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_margin_15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin_5dp"
                        android:layout_marginBottom="@dimen/activity_margin_10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/colorVal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/latinotypeantartidaroundedmedium"
                            android:textColor="#131313"
                            android:textStyle="normal" />
                    </LinearLayout>


                </TableRow>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>