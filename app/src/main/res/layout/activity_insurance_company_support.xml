<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightdarkcolorgrey"
    tools:context=".InsuranceCompanySupport">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:isScrollContainer="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin_10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="@dimen/activity_margin_100dp"
                        android:layout_height="@dimen/activity_margin_100dp"
                        android:src="@drawable/supportimg">

                    </ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/activity_margin_10dp"
                    android:layout_marginTop="@dimen/activity_margin_20dp"
                    android:layout_marginEnd="@dimen/activity_margin_10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtinsurancetype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/latinotypeantartidaroundedmedium"
                        android:paddingStart="@dimen/activity_margin_10dp"
                        android:text="@string/request_for"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_margin_14dp" />

                    <Spinner
                        android:id="@+id/spinnersupports"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/activity_margin_50dp"
                        android:layout_column="1"
                        android:layout_margin="@dimen/activity_margin_10dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner"
                        android:ellipsize="none"
                        android:inputType="textMultiLine"
                        android:minHeight="?android:attr/listPreferredItemHeight"
                        android:singleLine="false"
                        android:spinnerMode="dropdown" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lineinsur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/activity_margin_5dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_margin_40dp"
                        android:layout_marginTop="@dimen/activity_margin_5dp"
                        android:layout_marginRight="@dimen/activity_margin_40dp"
                        android:background="#1fb05d"
                        app:cardBackgroundColor="#1fb05d">

                        <TextView
                            android:id="@+id/uatinsurtest1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/activity_margin_0dp"
                            android:fontFamily="@font/latinotypeantartidaroundedmedium"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/activity_margin_14dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/uatinsur"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/activity_margin_5dp"
                            android:layout_marginBottom="@dimen/activity_margin_5dp"
                            android:fontFamily="@font/latinotypeantartidaroundedmedium"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/activity_margin_14dp"

                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/uatinsurtest2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/activity_margin_0dp"
                            android:fontFamily="@font/latinotypeantartidaroundedmedium"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/activity_margin_14dp"

                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_margin_10dp"
                    android:layout_marginTop="@dimen/activity_margin_20dp"
                    android:layout_marginEnd="@dimen/activity_margin_10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txttitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/latinotypeantartidaroundedmedium"
                        android:paddingStart="@dimen/activity_margin_10dp"
                        android:text="@string/title"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_margin_14dp" />

                    <EditText
                        android:id="@+id/edittitle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/activity_margin_50dp"
                        android:layout_margin="@dimen/activity_margin_10dp"
                        android:background="@drawable/edit_text"
                        android:fontFamily="@font/latinotypeantartidaroundedmedium"
                        android:paddingLeft="@dimen/activity_margin_10dp"
                        android:singleLine="true"
                        android:textSize="@dimen/activity_margin_14dp">

                    </EditText>

                    <!--                    <EditText-->
                    <!--                        android:id="@+id/edittitle"-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="@dimen/activity_margin_50dp"-->
                    <!--                        android:layout_margin="@dimen/activity_margin_10dp"-->
                    <!--                        android:layout_marginLeft="@dimen/activity_margin_10dp"-->
                    <!--                        android:background="@drawable/rectborder"-->
                    <!--                        android:padding="@dimen/activity_margin_500dp"-->
                    <!--                        android:singleLine="false" />-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_margin_10dp"
                    android:layout_marginTop="@dimen/activity_margin_15dp"
                    android:layout_marginEnd="@dimen/activity_margin_10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtdescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/latinotypeantartidaroundedmedium"
                        android:paddingStart="@dimen/activity_margin_10dp"
                        android:text="@string/description"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_margin_14dp" />


                    <EditText
                        android:id="@+id/editTextTextMultiLine"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/activity_margin_100dp"
                        android:layout_margin="@dimen/activity_margin_10dp"
                        android:layout_marginLeft="@dimen/activity_margin_10dp"
                        android:background="@drawable/edit_text"
                        android:fontFamily="@font/latinotypeantartidaroundedmedium"
                        android:gravity="top|start"
                        android:inputType="textMultiLine"
                        android:paddingLeft="@dimen/activity_margin_10dp"
                        android:paddingTop="@dimen/activity_margin_10dp"
                        android:singleLine="false"
                        android:textAlignment="textStart"
                        android:textSize="@dimen/activity_margin_14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_margin_20dp"
                    android:layout_marginTop="@dimen/activity_margin_15dp"
                    android:layout_marginEnd="@dimen/activity_margin_20dp"
                    android:orientation="vertical">


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtattachment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/latinotypeantartidaroundedmedium"
                            android:text="@string/attachment"
                            android:textColor="@color/black"
                            android:textSize="@dimen/activity_margin_14dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="end">

                            <ImageView
                                android:id="@+id/uploadimg"
                                android:layout_width="@dimen/activity_margin_35dp"
                                android:layout_height="@dimen/activity_margin_35dp"
                                android:layout_marginTop="@dimen/activity_margin_5dp"
                                android:layout_marginEnd="@dimen/activity_margin_10dp"
                                android:clickable="false"
                                android:gravity="end"
                                android:src="@drawable/attachimg">

                            </ImageView>
                        </LinearLayout>


                        <!--                        <EditText-->
                        <!--                            android:id="@+id/editattachment"-->
                        <!--                            android:layout_width="match_parent"-->
                        <!--                            android:layout_height="@dimen/activity_margin_50dp"-->
                        <!--                            android:layout_marginLeft="@dimen/activity_margin_10dp"-->
                        <!--                            android:layout_marginTop="@dimen/activity_margin_10dp"-->
                        <!--                            android:layout_marginRight="@dimen/activity_margin_10dp"-->
                        <!--                            android:enabled="false"-->
                        <!--                            android:clickable="false"-->
                        <!--                            android:background="@drawable/rectborder"-->
                        <!--                            android:padding="@dimen/activity_margin_500dp"-->
                        <!--                            android:singleLine="false"-->
                        <!--                            android:textAlignment="textStart"-->
                        <!--                            android:textColorHint="@color/black" />-->


                    </LinearLayout>

                    <TextView
                        android:id="@+id/editattachment"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/activity_margin_50dp"
                        android:layout_marginTop="@dimen/activity_margin_10dp"
                        android:fontFamily="@font/latinotypeantartidaroundedmedium"
                        android:paddingStart="@dimen/activity_margin_5dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_margin_20dp">

                    </TextView>

                </LinearLayout>


            </LinearLayout>


        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/submitBtnInsuranceSupport"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_margin_50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/purple_500"
        android:gravity="bottom|center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_margin_5dp"
                android:fontFamily="@font/latinotypeantartidaroundedmedium"
                android:text="@string/submit"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_margin_20dp">

            </TextView>

            <ImageView
                android:layout_width="@dimen/activity_margin_30dp"
                android:layout_height="@dimen/activity_margin_30dp"
                android:src="@drawable/ic_round_double_arrow_24">

            </ImageView>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
