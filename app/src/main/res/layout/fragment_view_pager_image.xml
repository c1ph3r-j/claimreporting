<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="@dimen/activity_margin_350dp"
    android:layout_height="@dimen/activity_margin_400dp"
    android:layout_margin="@dimen/activity_margin_10dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="@dimen/activity_margin_10dp">

    <ImageView
        android:id="@+id/imageViewForViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="fitXY" />


</androidx.cardview.widget.CardView>
